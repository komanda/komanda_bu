<table style="text-align:left">
	
	<tr>
		<th>Name</th>
		<td><%= "#{@order.first_name} #{@order.last_name}" %></td>
	</tr>
	
	<tr>
		<th>Email</th>
		<td><%= @order.email %></td>
	</tr>
	
	<tr>
		<th>Address</th>
		<td>
			<%= @order.address %><br/>
			<%= "#{@order.city}, #{@order.state} #{@order.zip}" %>
		</td>
	</tr>
	
	<tr>
		<th>Order ID</th>
		<td><%= @order.id %></td>
	</tr>
	
	<tr>
		<th>Transaction ID</th>
		<td><%= @order.transactions.last.id %></td>
	</tr>
	
	<tr>
		<th>Product</th>
		<td><%= @product.name %></td>
	</tr>
	
	<tr>
		<th>Quantity</th>
		<td><%= @order.quantity %></td>
	</tr>
	
	<tr>
		<th>Price</th>
		<td><%= @order.price %></td>
	</tr>
	
	<tr>
		<th>Total</th>
		<td><%= number_to_currency(@order.price * @order.quantity) %></td>
	</tr>
	
	
	
	
</table>