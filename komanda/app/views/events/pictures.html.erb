<%= link_to @event, class: "pull-left back link-with-icon" do %>
	<i class="icon-angle-left"></i> Back
<% end %>

<h3 class="center">
	<%= pluralize(@event.pictures.count, "Picture") %>
</h3>



<div class="row" id="pictures">
	<% @event.pictures.each do |picture| %>
		
			<%= link_to image_tag(thumb_url(picture), class: "picture"), "#",
			 		class: "picture-container span3", alt: picture %>
		
	<% end %>
</div>


<div id="picture-modal" style="display:none">
	<div style="
		min-width: 440px;
		height: auto;
		left: 0;
		min-height: 100%;
		position: fixed;
		right: 0;
		top: 0;
		z-index: 400;
		display: table;
		height: 100% !important;
		table-layout: fixed;
		width: 100%;
		background-color: rgba(0, 0, 0, .9);">
		<a href="#" id="close-picture-modal">Ã—</a>
		<p> 
			<span id="picture_index">1</span> of <span id="total"><%= @event.pictures.count %></span>
		</p>
		<a id="prev-button" class="carousel-control left" href="" data-slide="prev">&lsaquo;</a>
 		<a id="next-button" class="carousel-control right" href="" data-slide="next">&rsaquo;</a>
		<div style="
			display: table-cell;
			text-align: center;
			vertical-align: middle;
			width: 100%;">

			<div style="
				display: inline-block;
				margin: 10px 0;
				text-align: left;">
				<div style="
					min-height: 400px;
					min-width: 400px;
					position: relative;
					text-align: center;">
					<img style="
						
						display: inline-block;
						vertical-align: middle;
						max-width: 100%;
						max-height: 100%;"
						src="">
				</div>				
			</div>			
		</div>
	</div>
</div>