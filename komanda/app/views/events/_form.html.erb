<%= form_for @event, html: { class: "form-horizontal" } do |f| %>
	
	<% if @event.errors.count > 0 %>
		<div class="alert alert-error">
			<% @event.errors.full_messages.each do |error| %>
				<p><%= error %></p>
			<% end %>
		</div>
	<% end %>
	
	<div class="control-group">
		<div class="control-label"><%= f.label :name %></div>
		<div class="controls">
			<%= f.text_field :name %>
		</div>
	</div>
	
	<div class="control-group">
		<div class="control-label"><%= f.label :date, "Date/Time" %></div>
		<div class="controls">
			<%= f.text_field :date, class: "date-picker" %> 
			<%= f.time_select :time, ampm: true, minute_step: 15 %>
		</div>
	</div>
	
	<div class="control-group">
		<div class="control-label"><%= f.label :flyer %></div>
		<div class="controls">
			<%= f.text_field :flyer %>
		</div>
	</div>
	
	<div class="control-group">
		<div class="control-label"><%= f.label :preview %></div>
		<div class="controls">
			<%= f.text_area :preview, rows: 3 %>
		</div>
	</div>
		
	<div class="control-group">
		<div class="control-label"><%= f.label :description %></div>
		<div class="controls">
			<%= f.text_area :description, rows: 3 %>
		</div>
	</div>	
	
	<div class="control-group">
		<div class="control-label"><%= f.label :address %></div>
		<div class="controls">
			<%= f.text_area :address, rows: 3 %>
		</div>
	</div>
		
	<div class="control-group">
		<div class="control-label"><%= f.label :map_link %></div>
		<div class="controls">
			<%= f.text_field :map_link %>
		</div>
	</div>	
	
	<div class="control-group">
		<div class="control-label"><%= f.label :price %></div>
		<div class="controls">
			<%= f.text_field :price %>
		</div>
	</div>
	
	<div class="control-group">
		<div class="control-label"><%= f.label :pictures %></div>
		<div class="controls">
			<%= f.text_area :pictures, rows: 3, value: @event.pictures.join(' ') %>
		</div>
	</div>
		
	<div class="separator"></div>
	
	<div class="controls">
		<% if params[:action] == "new" %>
			<%= f.submit "Create", class: "btn btn-primary" %>			
		<% else %>
			<%= f.submit "Update", class: "btn btn-primary" %>
		<% end %>

		<%= link_to "Cancel", root_path, class: "btn" %>
	</div>
<% end %>
