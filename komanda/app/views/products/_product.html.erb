<article class="span4 default product">
	<% if admin_user? %>
		<div class="admin">
			<%= link_to edit_product_path(product) do %>
				<i class="icon-edit"></i>
			<% end %>
			
			<%= link_to product,
			 	method: :delete, 
				:data => { :confirm => 'Are you sure you want to delete this product?' } do %>
				<i class="icon-remove"></i>
			<% end %>
		</div>
	<% end %>
	
	<%= image_tag product.pictures.first, class: "main-picture", id: "main-picture-#{product.id}" %>

	<div class="thumbs">
		<% product.pictures.each do |picture| %>
			<%= image_tag picture, size: "50x50", 
				class: "thumb #{'selected' if  picture == product.pictures.first}" %>
		<% end %>
	</div>
	
	<p class="lead">
		<%= product.name %> 
		<span class="price pull-right"><%= number_to_currency product.price %></span>
	</p>
	
	<p class="lead pull-right" style="color:orange"></p>

	<p>
		<%= link_to "Buy", 
			"#{new_order_path}?product_id=#{product.id}", 
			class: "pull-right btn btn-primary span2 hidden-phone" %>
		<%= link_to "Buy", 
			"#{new_order_path}?product_id=#{product.id}", 
			class: "pull-right btn btn-primary btn-large span2 visible-phone" %>
	</p>
</article>